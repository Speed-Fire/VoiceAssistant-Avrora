{
  "realm": "Avrora-realm",
  "enabled": true,

  "registrationAllowed": true,
  "loginWithEmailAllowed": true,
  "resetPasswordAllowed": true,

  "roles": {
    "realm": [
      {
        "name": "admin",
        "description": "User with maximal priveleges."
      },
      {
        "name": "user",
        "description": "Standard level of priveleges."
      }
    ]
  },

  "clients": [
    {
      "clientId": "${AUTH_CLIENT_ADMIN_ID}",
      "enabled": true,
      "protocol": "openid-connect",
      "publicClient": false,
      "clientAuthenticatorType": "client-secret",
      "secret": "${AUTH_CLIENT_ADMIN_SECRET}",
      "redirectUris": [],
      "defaultRoles": [ "admin" ],
      "directAccessGrantsEnabled": true,
      "serviceAccountsEnabled": true,
      "attributes": {
        "use.jwks.url": "true",
        "display.on.consent.screen": "false"
      }
    }
  ]
}